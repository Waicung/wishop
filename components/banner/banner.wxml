<!--components/banner/banner.wxml-->
<view class="container">
  <swiper
    indicator-dots="{{ indicatorDots }}"
    autoplay="{{ autoplay }}"
    interval="{{ interval }}"
    duration="{{ duration }}"
  >
    <block wx:for="{{ background }}" wx:key="*this">
      <swiper-item>
        <image mode="aspectFit" src="{{ default }}"></image>
      </swiper-item>
    </block>
  </swiper>
</view>
